<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>


    </style>
    <style name="FacebookLoginButton">
        <item name="android:text">@string/continuar_facebook</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="LoginGoogle">
        <item name="android:text">@string/continuar_google</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorAccent
        </item>
    </style>

    <style name="StyleLoginInput" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/md_white_1000</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#ced2238d</item>
        <item name="colorControlNormal">#ced2238d</item>
        <item name="colorControlActivated">#ced2238d</item>
    </style>

    <style name="StyleEditText" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/md_white_1000</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#ced2238d</item>
        <item name="colorControlNormal">#ced2238d</item>
        <item name="colorControlActivated">#ced2238d</item>
    </style>



</resources>
